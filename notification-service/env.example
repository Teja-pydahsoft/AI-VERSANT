# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Database
MONGODB_URI=mongodb://localhost:27017/versant_notifications

# API Security
NOTIFICATION_API_KEYS=default-api-key,your-secure-api-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://crt.pydahsoft.in

# Email Service (Brevo)
BREVO_API_KEY=your_brevo_api_key
SENDER_EMAIL=noreply@versant.com
SENDER_NAME=VERSANT System

# Email Service (SMTP Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Service (BulkSMS)
BULKSMS_API_KEY=your_bulksms_api_key
BULKSMS_SENDER_ID=VERSANT
BULKSMS_API_URL=https://www.bulksmsapps.com/api/apismsv2.aspx

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (VAPID)
VAPID_SUBJECT=mailto:admin@versant.com
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Push Notifications (OneSignal)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key
ONESIGNAL_USER_AUTH_KEY=your_onesignal_user_auth_key
